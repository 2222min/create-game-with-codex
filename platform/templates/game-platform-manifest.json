{
  "manifestVersion": 1,
  "gameId": "replace-with-game-id",
  "bundleProfile": "idle-rpg-social",
  "modules": [
    {
      "id": "payment-core",
      "version": "^1.0.0",
      "enabled": true,
      "gameAdapter": "adapters/payment-adapter.js"
    },
    {
      "id": "economy-wallet",
      "version": "^1.0.0",
      "enabled": true,
      "gameAdapter": "adapters/wallet-adapter.js"
    },
    {
      "id": "analytics-event-pipeline",
      "version": "^1.0.0",
      "enabled": true,
      "gameAdapter": "adapters/analytics-adapter.js"
    },
    {
      "id": "social-guild-and-leaderboard",
      "version": "^1.0.0",
      "enabled": true,
      "gameAdapter": "adapters/social-adapter.js"
    },
    {
      "id": "liveops-season-pass",
      "version": "^1.0.0",
      "enabled": true,
      "gameAdapter": "adapters/liveops-adapter.js"
    }
  ],
  "kpiTargets": {
    "d1Retention": 0.3,
    "d7Retention": 0.1,
    "firstWeekPayerConversion": 0.015,
    "shareRate": 0.2
  },
  "notes": "Keep monetization non-pay-to-win for friend-group fairness."
}
